{% extends 'layouts/base.twig' %}
{% block content %}
    <div class="container">
        <div class="columns">
            <div class="column">
                <h1 class="title is-1">{{ title }}</h1>
            </div>
        </div>
        <div class="columns is-multiline">
            {% for post in posts %}
                <div class="column is-full">
                    {% include ['leaves/'~post.type.slug~'-teaser.twig', 'leaves/teaser.twig'] %}
                </div>
            {% else %}
                <div class="column">
                    {% include 'leaves/nothing.twig' %}
                </div>
            {% endfor %}
        </div>
        {% if posts %}
            <div class="columns">
                <div class="column">
                    {% include 'leaves/pagination.twig' with {posts: posts} only %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}